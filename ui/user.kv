<UserGrid@GridLayout>:
	size_hint: 1.2,1.2
	size_hint_y: 0.6
	cols: 2
	CustomGridButton:
		text: root.name or ""
	    on_press: root.line_click()
	CustomGridButton:
		text: root.email_address or ""

<UserList>
	cust: cust
	canvas:
		Color:
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size
	CustomBoxLayout:
		padding: 20
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				spacing: 5
				size_hint_y: 0.06
				CustomListTitle:
					text: "User"
					
				CustomListButton:
					text: "Back"
					on_press: 
						root.manager.current= 'main_page'
						root.manager.transition = SlideTransition(direction="right")
				CustomListButton:
					text: "Add New"
					on_press: 
						root.make_current_click_idx_null()
						root.manager.current= 'user'
						root.manager.transition = SlideTransition(direction="left")
					
			BoxLayout:
				size_hint_y: 0.1
				CustomListLabel:
					text: "User Name"
	
				CustomListLabel:
					text: "Contact Email"
					
			CustomListBoxLayout:
				RecycleView:
					scroll_type:['bars', 'content']
					bar_width: 10
					bar_color: (0,0,0,0.2)
					canvas.after:
				        Color:
				            rgba: self.bar_color[:3] + [self.bar_color[3] * 1 if self.do_scroll_y else 0]
				        Rectangle:
				            pos: self.right - self.bar_width - self.bar_margin, self.y + self.height * self.vbar[0]
				            size: self.bar_width, self.height * self.vbar[1]
					id:cust
					viewclass: 'UserGrid'
					CustomListRecycleGridLayout:
		               

<UserLabel@Label>:
	size_hint_y: 3
	size_hint_x: 0.2
    font_size: 20
    text_size: self.size
    bold: True
    color: 0,0,0,1
<UserTextInput@TextInput>:
	size_hint_y: 1.6
	size_hint_x: 0.2
	font_size: 18
	valign: "middle"

<User>:
	name: name
    password: password
    email_address: email_address    
	canvas:
		Color:
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size
	CustomBoxLayout:
		orientation: "horizontal"
		CustomBoxLayout:
			spacing: 20
			padding: 20
			orientation: "vertical"
			BoxLayout:
				size_hint_y: 0.1
				CustomBackButton:
					size_hint_x: 0.15
					size_hint_y: 1.3
					bold: True
					on_press: 
						app.root.ids.customer_list_screen.make_current_click_idx_null()
						root.manager.current= 'user_list'	
						root.manager.transition = SlideTransition(direction="right")
				Label:
			CustomLineBoxLayout:	
				orientation: "vertical"
				BoxLayout:
					padding:20
					size_hint_y: 1
				    Label:
						size_hint_y: 5
						size_hint_x: 0.2
				        font_size: 30
				        text: "User"
				        text_size: self.size
				        bold: True
				        italic: True
				        color: 0,0,0,1
				BoxLayout:
					size_hint_y: 1
					padding:20
					UserLabel:	
				        text: "User Name"	        
				    UserTextInput:
				    	id: name
				    	write_tab: False
				    	multiline: False

				BoxLayout:
					padding:20
					size_hint_y: 1
					UserLabel:
				        text: "Password"
				    UserTextInput:
				    	id: password
				    	write_tab: False
				    	multiline: False
				BoxLayout:
					padding:20
					size_hint_y: 1
					UserLabel:
				        text: "Contact Email"
				    UserTextInput:
				    	id: email_address
				    	write_tab: False
				    	multiline: False
				    	on_text_validate: root.save()

				BoxLayout:
					BoxLayout:
						size_hint_x: 0.5
					BoxLayout:
						CustomSaveButton:
		            		size_hint_y: 0.7
		            		on_press: root.save()
		            		text: root.update_button_text or ""
		            	BoxLayout:
		            	CustomCancelButton:
		            		size_hint_y: 0.7
		            		on_press: root.cancel()
		            		text: root.delete_button_text or ""
		            BoxLayout:
		            	size_hint_x: 0.5
	            BoxLayout:
	            	size_hint_y: 0.2
	        BoxLayout:
				orientation: "vertical"
				size_hint_y: 1
		CustomBoxLayout:
			size_hint_x: 0.5