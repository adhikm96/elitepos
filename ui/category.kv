<CategoryGrid@GridLayout>:
	size_hint: 1.2,1.2
	size_hint_y: 0.6
	cols: 1
	CustomGridButton:
		text: root.name or ""

<CategoryList>
	cat: cat
	canvas:
		Color:
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size
	CustomBoxLayout:
		padding: 20
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				spacing: 5
				size_hint_y: 0.06
				CustomListTitle:
					text: "Category"
					
				CustomListButton:
					text: "Back"
					on_press:root.manager.current= 'main_page'
					on_press: root.manager.transition = SlideTransition(direction="right")
				CustomListButton:
					text: "Add New"
					on_press: app.root.ids.supplier_screen.cancel()
					on_press:root.manager.current= 'category'
					on_press: root.manager.transition = SlideTransition(direction="left")
					
			BoxLayout:
				size_hint_y: 0.1
				CustomListLabel:
					text: "Category Name"				
					
			CustomListBoxLayout:
				RecycleView:
					id: cat
					viewclass: 'CategoryGrid'
					CustomListRecycleGridLayout:
	       
<Category>:
	canvas:
		Color: 
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size
	CustomBoxLayout:
		orientation: "horizontal"
		BoxLayout:
			spacing: 20
			padding: 20
			orientation: "vertical"
			BoxLayout:
				size_hint_y: 0.001
			BoxLayout:
				size_hint_y: 0.1
				CustomBackButton:
					size_hint_x: 0.15
					size_hint_y: 2
					on_press:root.manager.current= 'category_list'	
					on_press: root.manager.transition = SlideTransition(direction="right")
				Label:
			CustomLineBoxLayout:
				orientation: "vertical"
				BoxLayout:
					padding: 20
					size_hint_y: 0.8
				    Label:
						size_hint_y: 10
						size_hint_x: 0.2
				        font_size: 30
				        text: "Category"
				        text_size: self.size
				        bold: True
				        italic: True
				        color: 0,0,0,1
				BoxLayout:
					padding: 20
					Label:
						size_hint_y: 12
						size_hint_x: 0.2
				        font_size: 20
				        text: "Name"
				        text_size: self.size
				        bold: True
				        color: 0,0,0,1
				    TextInput:
				    	id: root.name
				    	size_hint_y: 1
				    	size_hint_x: 0.2
				    	font_size: 20
				    	write_tab: False
				
				BoxLayout:
					padding: 20
					BoxLayout:
						size_hint_x: 0.5
					BoxLayout:
						CustomSaveButton:
		            		size_hint_y: 1.1
		            		on_press: root.save()
		            	BoxLayout:
		            	CustomCancelButton:
		            		size_hint_y: 1.1
		            		on_press: root.cancel()
		            BoxLayout:
		            	size_hint_x: 0.5
	            
	        BoxLayout:
				orientation: "vertical"
				size_hint_y: 2
        BoxLayout:
        	size_hint_x: 0.5
        	