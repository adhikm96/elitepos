<AccountTypeDropDown>:
    on_select:
        app.root.ids.account_screen.ids.account_type.text = '{}'.format(args[1])  

<ActivityDropDown>:
    on_select:
        app.root.ids.account_screen.ids.activity.text = '{}'.format(args[1])  

<AccountGrid@GridLayout>:
	size_hint: 1.2,1.2
	size_hint_y: 0.6
	cols: 3
	CustomGridButton:
		text: root.account_name  or ""
		on_press: root.line_click()
	CustomGridButton:
		text: root.account_type or ""
	CustomGridButton:
		text: root.activity or ""

<AccountList>
	act: act
	canvas:
		Color:
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size
	CustomBoxLayout:
		padding: 20
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				spacing: 5
				size_hint_y: 0.06
				CustomListTitle:
					text: "Account"
				CustomListButton:
					text: "Back"
					on_press:
						root.manager.current= 'main_page'
						root.manager.transition = SlideTransition(direction="right")
				CustomListButton:
					text: "Add New"
					on_press: 
						root.make_current_click_idx_null()
						root.manager.current= 'account'
						root.manager.transition = SlideTransition(direction="left")
					
			BoxLayout:
				size_hint_y: 0.1
				CustomListLabel:
					text: "Account Name"				
				CustomListLabel:
					text: "Account Type"
				CustomListLabel:
					text: "Activity"
			CustomListBoxLayout:
				RecycleView:
					scroll_type:['bars', 'content']
					bar_width: 10
					bar_color: (0,0,0,0.2)
					canvas.after:
				        Color:
				            rgba: self.bar_color[:3] + [self.bar_color[3] * 1 if self.do_scroll_y else 0]
				        Rectangle:
				            pos: self.right - self.bar_width - self.bar_margin, self.y + self.height * self.vbar[0]
				            size: self.bar_width, self.height * self.vbar[1]
					id: act
					viewclass: 'AccountGrid'
					CustomListRecycleGridLayout:
	       
<Account>:
	canvas:
		Color: 
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size
	CustomBoxLayout:
		orientation: "horizontal"
		BoxLayout:
			spacing: 20
			padding: 20
			orientation: "vertical"
			BoxLayout:
				size_hint_y: 0.001
			BoxLayout:
				size_hint_y: 0.1
				CustomBackButton:
					size_hint_x: 0.15
					size_hint_y: 2.5
					on_press:
						app.root.ids.account_list_screen.make_current_click_idx_null()
						root.manager.current= 'account_list'	
						root.manager.transition = SlideTransition(direction="right")
				Label:
			CustomLineBoxLayout:
				size_hint_y: 2
				orientation: "vertical"
				padding: 20
				BoxLayout:
					size_hint_y: 0.5
				    Label:
						size_hint_y: 1.5
						size_hint_x: 0.2
				        font_size: 30
				        text: "Account"
				        text_size: self.size
				        bold: True
				        italic: True
				        color: 0,0,0,1
				BoxLayout:
					Label:
						size_hint_y: 12
						size_hint_x: 0.2
				        font_size: 20
				        text: "Account Name"
				        text_size: self.size
				        bold: True
				        color: 0,0,0,1
				    TextInput:
				    	id: account_name
				    	size_hint_y: 0.65
				    	size_hint_x: 0.2
				    	font_size: 17
				    	write_tab: False
				BoxLayout:
					Label:
						size_hint_y: 12
						size_hint_x: 0.2
				        font_size: 20
				        text_size: self.size
				        bold: True
				        color: 0,0,0,1
				        text: "Account Type"
				    Button:
				        id: account_type
				        text: 'Select'
				        on_release: Factory.AccountTypeDropDown(root).open(self)
				        text_size: self.size
				        size_hint_y: 0.65
				    	size_hint_x: 0.2
				    	font_size: 15
				        padding_x: 10
						valign: "middle"
						canvas:
					        Color:
					            rgba: 0, 0, 0, 0.8
					        Line:
					            width: 1
					            rectangle: self.x, self.y, self.width, self.height
						background_color: 0, 0, 0, 0.1
						color: 0,0,0,1
					    
				BoxLayout:
					Label:
						size_hint_y: 12
						size_hint_x: 0.2
				        font_size: 20
				        text_size: self.size
				        bold: True
				        color: 0,0,0,1
				        text: "Activity"
				    Button:
				        id: activity
				        text: 'Select'
				        on_release: Factory.ActivityDropDown(root).open(self)
				        text_size: self.size
				        padding_x: 10
				        size_hint_y: 0.65
				    	size_hint_x: 0.2
				    	font_size: 15
						valign: "middle"
						valign: "middle"
						canvas:
					        Color:
					            rgba: 0, 0, 0, 0.8
					        Line:
					            width: 1
					            rectangle: self.x, self.y, self.width, self.height
						background_color: 0, 0, 0, 0.1
						color: 0,0,0,1
				BoxLayout:
					size_hint_y: 0.5
				BoxLayout:
					
					BoxLayout:
						size_hint_x: 0.5
					BoxLayout:
						CustomSaveButton:
		            		size_hint_y: 0.7
		            		on_press: root.save()
		            	BoxLayout:
		            	CustomCancelButton:
		            		size_hint_y: 0.7
		            		on_press: root.cancel()
		            		text: root.delete_button_text or ""
		            BoxLayout:
		            	size_hint_x: 0.5
	            
	        BoxLayout:
				orientation: "vertical"
				size_hint_y: 2
        BoxLayout:
        	size_hint_x: 0.5
        	