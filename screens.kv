<CustomListTitle@Label>:
	text_size: self.size
	font_size: 30
	bold: True
	color: 0,0,0,1

<CustomListBoxLayout@BoxLayout>:
	canvas.before:
	    Color:
	        rgba: 0, 0, 0, 0.8
	    Line:
	        width: 1
	        rectangle: self.x, self.y, self.width, self.height

		Color:
		    rgba: (1,1,1,1) 
		Rectangle:
		    pos: self.pos
		    size: self.size

<CustomListLabel@Label>:
	text_size: self.size
	color: 0,0,0,1
	bold: True
	padding_x: 5
	font_size: 18

<CustomListButton@Button>:
	size_hint_x: 0.1
	size_hint_y: 1.2
	canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
	background_color: 0, 0, 0, 0.2
	color: 0,0,0,1
	bold: True

<CustomListRecycleGridLayout@RecycleGridLayout>:
	cols: 1
    key_selection: 'selectable'
    default_size: None, dp(35)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    multiselect: True
    touch_multiselect: True


<CustomGridButton@Button>:
	background_color: 0,0,0,0
	color: 0,0,0,1
	canvas:
        Color:
            rgba: 0, 0, 0, 0.8
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    text_size: self.size
    valign: "middle"
    padding_x: 5

<CustomerGrid@GridLayout>:
